<script>
censorshipCheckerTemp={{ jsonData }};
censorshipCheckerData.push( censorshipCheckerTemp );
</script>

<table class="tweettable">
	{% if ( sourcetweet ) %}
	<tr class="tweetrow">
		<td colspan="5">{{ sourcetweet }}</td>
	</tr>
	{% endif %}

	<tr class="infoheader">
		<th>Status</th>
		<th>Number of replies</th>
		<th>Available</th>
		<th>Suppressed</th>
		<th>Hidden</th>
	</tr>

	<tr class="inforow">
		{{ status }}
		<td>{{ num_replies }}</td>
		<td>{{ percent_available }}%</td>
		<td>{{ percent_suppressed }}%</td>
		<td>{{ percent_hidden }}%</td>
	</tr>

	<tr class="sectionheader">
		<th colspan="5">
			Anomalous elevated replies:
		</th>
	</tr>

	<tr class="tweetlistrow">
		<td colspan="5">
			<ul>
				{% for item in anomalous_elevated_tweets %}
				<li>
					{{ item }}
				</li>
				{% endfor %}
			</ul>
		</td>
	</tr>

	<tr class="sectionheader">
		<th colspan="5">
			Anomalous suppressed/hidden replies:
		</th>
	</tr>

	<tr class="tweetlistrow">
		<td colspan="5">
			<ul>
				{% for item in anomalous_suppressed_tweets %}
				<li>
					{{ item }}
				</li>
				{% endfor %}
			</ul>
		</td>
	</tr>

	<tr class="sectionheader">
		<th colspan="5">
			Other hidden replies:
		</th>
	</tr>

	<tr class="tweetlistrow">
		<td colspan="5">
			<ul>
				{% for item in hidden_tweets %}
				<li>
					{{ item }}
				</li>
				{% endfor %}
			</ul>
		</td>
	</tr>


	{% if ( debugData != null ) %}
	<tr class="debugrow">
		<td colspan="5"><a class="hideshow" data-name-hide="hide" data-name-show="show" href="#">show</a> <pre class="debugdata hideshowcontent">{{ debugData }}</pre></td>
	</tr>
	{% endif %}
</table>
